{
  "name": "chatgpt-word-copier",
  "version": "1.0.0",
  "description": "Chrome extension to copy ChatGPT responses with formulas for MS Word",
  "private": true,
  "scripts": {
    "build": "node scripts/version.mjs && node scripts/build.mjs",
    "watch": "node scripts/build.mjs --watch",
    "icons": "node scripts/generate-icons.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "version": "node scripts/version.mjs && git add src/manifest.json",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "package": "node scripts/version.mjs && node scripts/build.mjs && cd dist && zip -r ../chatgpt-word-copier.zip . -x '.*'"
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "jsdom": "^28.1.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "jszip": "^3.10.1"
  }
}
